@page "/battle"

<PageTitle>Battle</PageTitle>

<h1>Choose you fighter!</h1>


<div class="row">
<div class="col-md-4">
<div class="card bg-light" style="width:auto">
  <img class="card-img-top" src="images/hamster/hamster-1.jpg" alt="Card image" onclick="">
  <div class="card-body">
    <h4 class="card-title text-center">Hamster 1</h4>
<ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Wins:
    <span class="badge bg-success rounded-pill">3</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Draws:
    <span class="badge bg-warning rounded-pill">2</span>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Losses:
    <span class="badge bg-danger rounded-pill">1</span>
  </li>
</ul>
    </div>
</div>
</div>



<div class="col-md-4">
<div class="card bg-light" style="width:auto">
